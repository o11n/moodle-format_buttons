<h2 class="accesshide">{{pageTitle}}</h2>
<ul class="buttons">
    
    {{#above}}
        <span class="above">
            {{#section0}}
                {{> format_buttons/local/content/section }}
            {{/section0}}
        </span>
    {{/above}}
    
    {{#buttonstyle}}
        <style>{{buttonstyle}}</style>
    {{/buttonstyle}}
    <div id="buttonsectioncontainer" class="{{shape}}" style="display: table;">
        {{#buttonsections}}
            {{> format_buttons/local/content/buttons }}
        {{/buttonsections}}
    </div>

    {{#editing}}
        <div class="alert alert-warning alert-block fade in">{{strediting}}</div>
    {{/editing}}

    {{#numberedsections}}
        {{> format_buttons/local/content/section }}
    {{/numberedsections}}

    {{^above}}
        <span class="below">
            {{#section0}}
                {{> format_buttons/local/content/section }}
            {{/section0}}
        </span>
    {{/above}}
</ul>

{{#editing}}
    <div id="changenumsections" class="mdl-right">
        <a class="increase-sections" href="{{{increaseurl}}}">
            {{{plusurl}}}
            <span class="accesshide">{{straddsection}}</span>
        </a>
        {{#decrease}}
            <a class="reduce-sections" href="{{{decreaseurl}}}">
                {{{minusurl}}}
                <span class="accesshide">{{strremovesection}}</span>
            </a>
        {{/decrease}}
    </div>
{{/editing}}