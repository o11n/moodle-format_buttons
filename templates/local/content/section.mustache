<li id="section-{{num}}"
    class="section main clearfix{{style}}{{#isstealth}} orphaned{{/isstealth}}"
    role="region" aria-label="{{{sectionname}}}"
    style="display: {{display}};"
>
    {{!header}}
    {{#header}}
        {{> format_buttons/local/content/section/header }}
    {{/header}}
    {{!controlmenu}}
    <div class="right side">
        {{#controlmenu}}
            {{> core_courseformat/local/content/section/controlmenu }}
        {{/controlmenu}}
    </div>
    {{!section-content}}
    <div class="content">
        <h3 class="sectionname{{#hide}} accesshide{{/hide}}">
            {{{editinline}}}
        </h3>
        {{!availability}}
        <div class="section_availability">
            {{#availability}}
                {{> core_courseformat/local/content/section/availability }}
            {{/availability}}
        </div>
        {{!summary}}
        <div class="summary">
            {{#summary}}
                {{> core_courseformat/local/content/section/summary }}
            {{/summary}}
        </div>
        <div class="section img-text">
            {{#cmlist}}
                {{> core_courseformat/local/content/section/cmlist }}
            {{/cmlist}}
        </div>
    </div>
</li>